    <changeSet id="create-add_seq" author="Ann" runOnChange="true">
        <createSequence cacheSize="1" cycle="false" sequenceName="add_seq" dataType="bigint" incrementBy="1" maxValue="9223372036854775807" minValue="1"  startValue="1"/>
    </changeSet>

    <changeSet id="create-address-table" author="Ann" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="addresses"/>
            </not>
        </preConditions>
        <sql>
            CREATE TABLE addresses (
                id BIGINT PRIMARY KEY NOT NULL DEFAULT nextval('add_seq'),
                role VARCHAR(255),
                newsletter_id BIGINT,
                CONSTRAINT fk_addresses_newsletters FOREIGN KEY (newsletter_id) REFERENCES newsletters(id)
            );
        </sql>
    </changeSet>
