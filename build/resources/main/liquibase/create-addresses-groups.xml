    <changeSet id="update-addresses-groups-table" author="Ann" runOnChange="true">
    <preConditions onFail="MARK_RAN">
        <tableExists tableName="addresses_groups"/>
    </preConditions>
    <sql>
        ALTER TABLE addresses_groups DROP CONSTRAINT addresses_groups_pkey;

        ALTER TABLE addresses_groups ADD COLUMN id BIGINT NOT NULL DEFAULT nextval('add_group_seq');

        ALTER TABLE addresses_groups ADD PRIMARY KEY (id);
        ALTER TABLE addresses_groups ALTER COLUMN group_id TYPE BIGINT;
        ALTER TABLE addresses_groups DROP CONSTRAINT addresses_groups_group_id_fkey;

        ALTER TABLE addresses_groups ADD FOREIGN KEY (address_id) REFERENCES addresses(id);
        ALTER TABLE addresses_groups ADD FOREIGN KEY (group_id) REFERENCES groups(id);
    </sql>
    </changeSet>

</databaseChangeLog>