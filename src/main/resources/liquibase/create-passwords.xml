<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-passwords-table" author="Ann" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="passwords"/>
            </not>
        </preConditions>
        <sql>
            CREATE TABLE passwords (
                id BIGINT PRIMARY KEY NOT NULL,
                password VARCHAR(255)
            );
        </sql>
    </changeSet>
        <!--<createTable tableName="passwords">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>-->


    <changeSet id="create-password-view" author="Ann">
        <preConditions onFail="MARK_RAN">
            <not>
                <viewExists viewName="password_view"/>
            </not>
        </preConditions>
        <createView viewName="password_view">
            SELECT p.id AS password_id,
            p.password AS password_value
            FROM passwords p
        </createView>
    </changeSet>
</databaseChangeLog>
