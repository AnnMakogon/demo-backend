<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-c_seq" author="Ann" runOnChange="true">
        <createSequence cacheSize="1" cycle="false" dataType="bigint" incrementBy="1" maxValue="9223372036854775807" minValue="1" sequenceName="c_seq" startValue="1"/>
    </changeSet>

    <changeSet id="create-courses-table" author="Ann" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="courses"/>
            </not>
        </preConditions>
        <sql>
            CREATE TABLE courses (
                id BIGINT PRIMARY KEY NOT NULL DEFAULT nextval('c_seq'),
                course_number VARCHAR(255)
            );
        </sql>
    </changeSet>

    <changeSet id="add-address-course_id" author="Ann" runOnChange="true">
        <sql>
            ALTER TABLE addresses
            ADD COLUMN course_id BIGINT UNIQUE;

            ALTER TABLE addresses
            ADD CONSTRAINT fk_course_address FOREIGN KEY (course_id) REFERENCES courses(id);
        </sql>
    </changeSet>
        <!--<createTable tableName="courses">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="course_number" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>-->


    <changeSet id="create-course-view" author="Ann">
        <preConditions onFail="MARK_RAN">
            <not>
                <viewExists viewName="course_view"/>
            </not>
        </preConditions>
        <createView viewName="course_view">
            SELECT c.id AS course_id,
            c.course_number AS course_number
            FROM courses c
        </createView>
    </changeSet>
</databaseChangeLog>
